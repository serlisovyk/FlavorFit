model Ingredient {
  id String @id @default(cuid())

  name        String
  defaultUnit UNIT?   @default(GRAM) @map("default_unit")

  recipesIngredient RecipeIngredient[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("ingredients")
}
