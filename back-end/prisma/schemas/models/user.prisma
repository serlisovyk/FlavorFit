model User {
  id String @id @default(cuid())

  email    String @unique
  password String
  role     ROLE   @default(USER)

  profile      Profile?
  measurements Measurement?

  recipes Recipe[]

  comments Comment[]

  likes Like[]

  orders Order[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
